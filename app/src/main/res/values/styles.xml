<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="MyTheme" parent="MyTheme.Base">

    </style>

    <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Progressbar" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorTransparent</item>
        <item name="android:bottomDark">@color/colorTransparent</item>
        <item name="android:bottomMedium">@color/colorTransparent</item>
        <item name="android:centerBright">@color/colorTransparent</item>
        <item name="android:centerDark">@color/colorTransparent</item>
        <item name="android:centerMedium">@color/colorTransparent</item>
        <item name="android:fullBright">@color/colorTransparent</item>
        <item name="android:fullDark">@color/colorTransparent</item>
        <item name="android:topBright">@color/colorTransparent</item>
        <item name="android:topDark">@color/colorTransparent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorWhite</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/layout_padding</item>
        <item name="android:paddingBottom">@dimen/layout_padding</item>
        <item name="android:paddingRight">@dimen/layout_padding</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorWhite</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">@dimen/layout_padding</item>
        <item name="android:paddingRight">@dimen/layout_padding</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:paddingLeft">@dimen/layoutview_padding</item>
        <item name="android:paddingRight">@dimen/layoutview_padding</item>
        <item name="android:paddingTop">@dimen/layoutview_top_margin</item>

    </style>

    <style name="ReportcellTotextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="GrayMediumSizeTextViewStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_marginTop">@dimen/layoutview_top_margin</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
    </style>

    <style name="ReportcellsenttextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="BlueColorcellTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:textColor">@color/colorLightBlue</item>
    </style>

    <style name="BlueColorcellDateTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textColor">@color/colorLightBlue</item>
    </style>

    <style name="LightBlueLargeTextViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:textColor">@color/colorLightBlue</item>
    </style>
</resources>
